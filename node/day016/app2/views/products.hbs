<div class="container">
    <h1>MySQL Database connecton and select query</h1>
    <h2>{{title}}</h2>

    <table class="table table-dark table-striped">
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
        </tr>
        {{#each products}}
        <tr>
            <th scope="row">1</th>
            <td>{{this.idproduct}}</td>
            <td>{{this.productName}}</td>
            <td>{{this.productPrice}}</td>
        </tr>
        {{/each}}
    </table>
</div>